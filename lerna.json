{
	"lerna": "3.0.2",
	"version": "0.1.0",
	"packages": [
		"packages/*"
	],
	"command": {
		"publish": {
			"yes": true,
			"message": "chore(release): publish",
			"allowBranch": [
				"master",
				"release/*"
			],
			"noCommitHooks": true,
			"conventionalCommits": true,
			"ignoreChanges": [
				"*.snap",
				"*.spec.ts",
				"*.md"
			]
		},
		"bootstrap": {
			"scope": [
				"@ngx-http-cache-control/*"
			],
			"hoist": true
		},
		"exec": {
			"scope": [
				"@ngx-http-cache-control/*"
			]
		},
		"clean": {
			"yes": true
		}
	},
	"npmClientArgs": [
		"--no-package-lock"
	]
}
